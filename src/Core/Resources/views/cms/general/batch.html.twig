{% if batch_actions is not empty %}
    <div 
        class="c-field c-field--xsmall c-choice-wrapper c-choice-wrapper--small u-mr-10 u-hidden"
        data-module-batch-actions-target="actions"
    >
        <select 
            name="t" 
            class="u-mr-10" 
            data-controller="ws-select"
            data-action="change->module-batch-actions#handleAction"
        >
            <option value="">
                {{ 'actions'|trans({}, 'ws_cms') }}
            </option>
            {% for action in batch_actions %}
                {% set actionData = get_batch_action_data(action) %}

                <option
                    value="{{ ws_cms_path("#{route_prefix}_#{actionData.route}") }}"
                    data-title="{{ actionData.title|trans({}, 'ws_cms') }}"
                >
                    {{ actionData.label|trans({}, 'ws_cms') }}
                </option>
            {% endfor %}
        </select>
    </div>
{% endif %}
