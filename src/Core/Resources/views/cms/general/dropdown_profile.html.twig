<div class="c-dropdown dropdown" data-controller="ws-dropdown" data-action="click->ws-dropdown#toggleDropdown">
    <a
        class="c-avatar c-avatar--xsmall has-dropdown dropdown-toggle"
        href="#"
        id="dropdwonMenuAvatar"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false"
    >
        <i class="fal fa-user-circle fa-lg u-pr-5"></i>
        {{ source('@WSCore/cms/icons/arrow.svg') }}
    </a>

    <div 
        class="c-dropdown__menu dropdown-menu dropdown-menu-right" 
        data-ws-dropdown-target="toggle"
        aria-labelledby="dropdwonMenuAvatar"
