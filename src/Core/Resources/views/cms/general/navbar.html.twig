<header class="c-navbar u-mb-medium">
    <button class="c-sidebar-toggle js-sidebar-toggle">
        <span class="c-sidebar-toggle__bar"></span>
        <span class="c-sidebar-toggle__bar"></span>
        <span class="c-sidebar-toggle__bar"></span>
    </button>
    <div class="u-ml-auto">
        {{ include(['components/navbar/navbar_menu.html.twig', '@WSCore/cms/general/navbar_menu.html.twig']) }}

        {{ include(['components/navbar/language.html.twig', '@WSCore/cms/general/language.html.twig']) }}

        {{ include(['components/navbar/alerts.html.twig', '@WSCore/cms/general/alerts.html.twig']) }}

        {{ include(['components/navbar/activity_log.html.twig', '@WSCore/cms/general/activity_log.html.twig']) }}

        {{ include(['components/navbar/dropdown_profile.html.twig', '@WSCore/cms/general/dropdown_profile.html.twig']) }}
    </div>

    {% set breadcrumbs = [{ 'name': 'dashboard.menu'|trans({}, 'ws_cms'), 'path': path('ws_dashboard') }]|merge(get_breadcrumbs()) %}
    <ol class="c-breadcrumb">
        {% for breadcrumb in breadcrumbs %}
            <li class="c-breadcrumb__item {{ breadcrumb.main is defined and breadcrumb.main ? 'is-active' }}">
                {% if breadcrumb.path is defined %}
                    <a href="{{ breadcrumb.path }}">
                        {{ breadcrumb.name }}
                    </a>
                {% else %}
                    {{ breadcrumb.name }}
                {% endif %}
            </li>
        {% endfor %}
    </ol>
</header>
